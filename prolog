1.3

является_матерью(X) :-
  мать(X,Y).

является_отцом(X) :-
  отец(X,Y).

является_сыном(X) :-
  мужчина(X), родитель(Y,X).

является_сестрой(X,Y) :-
  женщина(X), родитель(Z,X), родитель(Z,Y), различны(X,Y).

дедушка(X,Y) :-
  отец(X,Z), родитель(Z,Y).

общие_родители(X,Y) :-
  родитель(Z,X), родитель(Z,Y), различны(X,Y).

3.1

меньше_1([],[]).
